<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/imgPet"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/lblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        app:layout_constraintTop_toBottomOf="@id/imgPet"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="152dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/lblName"
        app:layout_constraintStart_toEndOf="@id/lblName"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/lblSpecie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Especie:"
        app:layout_constraintTop_toBottomOf="@id/lblName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txtSpecie"
        android:layout_width="152dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/lblSpecie"
        app:layout_constraintStart_toEndOf="@id/lblSpecie"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/lblBread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raza:"
        app:layout_constraintTop_toBottomOf="@id/lblSpecie"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txtBreed"
        android:layout_width="152dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/lblBread"
        app:layout_constraintStart_toEndOf="@id/lblBread"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/lblSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo:"
        app:layout_constraintTop_toBottomOf="@id/lblBread"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txtSex"
        android:layout_width="152dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/lblSex"
        app:layout_constraintStart_toEndOf="@id/lblSex"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
